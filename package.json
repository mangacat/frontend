{
  "name": "manga.cat",
  "version": "0.0.1",
  "description": "Read manga online for free in high quality with no ads!",
  "author": "dasZGFz <daszgfz@protonmail.com> (https://das.zgfz.me)",
  "private": true,
  "license": "GPL-3.0",
  "scripts": {
    "dev": "NODE_ENV=development run-s build:css dev:sapper",
    "dev:sapper": "sapper dev",
    "build": "NODE_ENV=production run-s build:*",
    "build:css": "node ./scripts/hashCssFile",
    "build:sapper": "sapper build --legacy",
    "start": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "npm run build && (PORT=3100 run-p --race start cy:run)",
