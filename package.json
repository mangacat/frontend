    "connect-redis": "^3.4.1",
    "dotenv": "^8.0.0",
    "express-session": "^1.16.2",
    "ganalytics": "^3.1.2",
    "node-fetch": "^2.6.0",
    "node-zopfli-es": "^1.0.3",
    "polka": "^1.0.0-next.4",
    "shrink-ray-current": "^4.0.0",
    "sirv": "^0.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.5.0",
    "@babel/preset-env": "^7.5.3",
    "@babel/runtime": "^7.5.3",
    "@fullhuman/postcss-purgecss": "^1.2.0",
